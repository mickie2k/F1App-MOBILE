<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp"
    app:contentPadding="22dp"
    app:contentPaddingLeft="24dp"
    app:contentPaddingRight="24dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">
            <TextView
                android:id="@+id/driverStanding"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1st"
                android:textStyle="bold"
                android:textColor="#151617"
                android:textSize="16sp"
                android:textAlignment="center"
                android:layout_marginBottom="6dp"
                />
            <TextView
                android:id="@+id/driverPoint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/points"
                android:background="#F5f5f5"
                android:paddingVertical="4dp"
                android:paddingHorizontal="12dp"
                android:textColor="@color/black"

                android:textSize="11sp"
                />



        </LinearLayout>
        <View
            android:layout_width="2sp"
            android:layout_height="match_parent"
            android:background="#a8a8a8"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/driverName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:layout_marginEnd="8dp"
                    />
                <TextView
                    android:id="@+id/driverLastName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Verstappen"
                    android:textAllCaps="true"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:layout_marginTop="6dp"
                android:id="@+id/driverTeam"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redbull Racing"
                android:textColor="#4b4b4b"
                android:textAllCaps="true"
                />



        </LinearLayout>
